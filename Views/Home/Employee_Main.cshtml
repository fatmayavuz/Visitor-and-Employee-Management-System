

@{
    ViewBag.Title = "Employee Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .dashboard-container {
            margin-top: 20px; /* Reduced from 50px to 20px */
        }

        .welcome-message {
            text-align: center;
            margin-bottom: 20px;
            margin-top: 10px; /* You can adjust this value for further fine-tuning */
        }

            .welcome-message h1 {
                font-weight: 700;
                color: #007bff;
            }

        .dashboard-content {
            display: flex;
            justify-content: space-between;
        }

        .daily-report {
            flex: 5;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            margin-right: 20px;
        }

        .action-cards {
            flex: 7;
        }

        .section-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            background-color: #fff;
            margin-bottom: 20px;
            transition: transform 0.3s, box-shadow 0.3s;
            text-align: center;
            font-size: 13px;
        }

            .section-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            }

            .section-card h3 {
                margin-bottom: 20px;
                font-weight: 600;
                color: #333;
            }

            .section-card p {
                margin-bottom: 15px;
                color: #666;
            }

        .btn-custom {
            background-color: #007bff;
            color: white;
            border-radius: 20px;
            padding: 10px 20px;
            transition: background-color 0.3s;
            font-size: 10px;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .icon-style {
            font-size: 1em; /* İkonu h1 başlığı ile aynı boyutta yapar */
            vertical-align: middle; /* İkonu h1 ile aynı hizaya getirir */
        }
    </style>
</head>
<body>
    <div class="container dashboard-container">

        <div class="container dashboard-container">
            <div class="welcome-message">
                <div class="icon">
                    <h1>
                        <span class="icon-style">💼</span>Welcome, @ViewBag.EmployeeFullName.ToUpper()!
                        
                    </h1>
                </div>

            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            <!-- Rest of your view -->
        </div>

        <div class="dashboard-content">

            <div class="action-cards">
                <div class="row">
                    <div class="col-md-4">
                        <div class="section-card">
                            <h3>See All Messages</h3>
                            <p>View all contact form messages</p>
                            <a href="@Url.Action("SeeAllMessages", "Home")" class="btn btn-custom">View Messages</a>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="section-card">
                            <h3>See All Appointments</h3>
                            <p>View all Appointments</p>
                            <a href="@Url.Action("SeeAllAppointments", "Home")" class="btn btn-custom">View Appointments</a>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="section-card">
                            <h3>Show Visitors</h3>
                            <p>Check all registered visitors</p>
                            <a href="@Url.Action("ShowAllVisitors", "Home")" class="btn btn-custom">View Visitors</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="section-card">
                            <h3>Create Visitor</h3>
                            <p>Add a new visitor to the system</p>
                            <a href="@Url.Action("CreateVisitor", "Home")" class="btn btn-custom">Add Visitor</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

