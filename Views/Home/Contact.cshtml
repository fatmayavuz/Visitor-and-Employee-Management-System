


@model bilgi.Models.Contact

@{
    var mapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6163.552337060139!2d34.56747552353616!3d36.77085319093169!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x15278b39edaa851f%3A0x38dc3bf7495371b5!2sMersin%20Sahili!5e0!3m2!1str!2str!4v1677746241540!5m2!1str!2str";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            padding: 20px;
        }

        h2, h3 {
            color: #007bff;
        }

        .content-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 20px;
            margin-top: 20px;
        }

        .contact-info {
            flex: 1;
            min-width: 300px;
            margin-bottom: 20px;
        }

            .contact-info address {
                line-height: 1.8;
                font-size: 1.2em; /* Increase font size */
            }

            .contact-info strong {
                font-size: 1.2em; /* Increase font size of labels */
            }

        .contact-form {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            flex: 1;
            min-width: 300px;
        }

            .contact-form label {
                font-weight: bold;
                margin-top: 10px;
            }

            .contact-form input, .contact-form textarea {
                width: 100%;
                padding: 10px;
                margin-top: 5px;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .contact-form button {
                background-color: #007bff;
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                margin-top: 10px;
                transition: background-color 0.3s;
            }

                .contact-form button:hover {
                    background-color: #0056b3;
                }

        iframe {
            border-radius: 10px;
            width: 100%;
            height: 300px;
            border: 0;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <br /><br />

    <div class="content-container">
        <!-- Left Side: Contact Info and Map -->
        <div class="contact-info">
            <address>
                <strong>Phone:</strong> +90 324 123 45 67
            </address>
            <address>
                <strong>Address:</strong> Akkent, Hüseyin Okan Merzeci Blv No:662, 33100 Yenişehir/Mersin
            </address>
            <address>
                <strong>Email:</strong> <a href="mailto:info@mersin.gov.tr">info@mersin.gov.tr</a><br />
            </address>

            <!-- Google Maps Embed -->
            <h3>Our Location</h3>
            <div>
                <iframe src="@mapUrl" allowfullscreen loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>

        <!-- Right Side: Contact Form -->
        <div class="contact-form">
            <h3>Contact Us</h3>
            @using (Html.BeginForm("SubmitContactForm", "Home", FormMethod.Post))
            {
                <div>
                    <label for="FullName">Full Name</label><br />
                    @Html.TextBoxFor(model => model.FullName, new { @id = "FullName" })
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>
                <div>
                    <label for="Email">Email</label><br />
                    @Html.TextBoxFor(model => model.Email, new { @id = "Email", type = "email" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div>
                    <label for="Message">Message</label><br />
                    @Html.TextAreaFor(model => model.Message, new { @id = "Message", rows = 5 })
                    @Html.ValidationMessageFor(model => model.Message)
                </div>
                <button type="submit">Submit</button>
            }
        </div>
    </div>
</body>
</html>

