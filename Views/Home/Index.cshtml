


@model IEnumerable<bilgi.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f5f5;
            margin: 0;
            padding: 0;
            color: #333; /* Set default font color */
        }

            /* Arka plan bulanıklaştırma */
            body.modal-open {
                overflow: hidden;
            }

        .modal-backdrop-blur {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4); /* Saydam bir arka plan */
            backdrop-filter: blur(5px); /* Arka planı bulanıklaştır */
            z-index: 999; /* Modalın altında kalacak şekilde z-index ayarla */
        }

        /* Diğer stiller burada kalacak */
        .news-modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 80%; /* Genişliği artır */
            max-width: 600px; /* Maksimum genişlik */
            padding: 20px;
            text-align: center;
            overflow-y: auto; /* İçeriğin taşması durumunda kaydırma çubuğu ekler */
            font-size:30px;
        }

            .news-modal h4 {
                color: #007bff;
                margin-bottom: 15px;
                font-size: 15px;
            }

        .close-modal {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 18px;
            color: #aaa;
        }

            .close-modal:hover {
                color: #000;
            }

        .carousel-inner img {
            height: 400px;
            object-fit: cover;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: #007bff;
            border-radius: 50%;
        }

        .information-container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin: 20px;
            max-width: 900px;
            margin: auto;
        }

        .information-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .information-header h1 {
                color: #007bff;
                font-size: 36px;
                margin-bottom: 10px;
            }

            .information-header p {
                font-size: 18px;
            }

        .information-content {
            font-size: 16px;
        }

            .information-content h2 {
                color: #007bff;
                margin-top: 30px;
                font-size: 28px;
            }

            .information-content p {
                margin-bottom: 20px;
            }

            .information-content img {
                max-width: 100%;
                height: auto;
                border-radius: 5px;
            }

        .news-container {
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

            .news-container h3 {
                color: #007bff;
                margin-bottom: 15px;
                font-size: 1.50rem; /* Font size increased */
            }

            .news-container ul {
                list-style: none;
                padding-left: 0;
            }

                .news-container ul li {
                    margin-bottom: 10px;
                    display: flex;
                    align-items: center;
                }

                    .news-container ul li a {
                        text-decoration: none;
                        color: #555; /* Same color as other text on the page */
                        font-weight: bold;
                        margin-left: 10px;
                        font-size: 1.20rem; /* Font size increased */
                    }

                        .news-container ul li a:hover {
                            text-decoration: underline;
                        }


                    .news-container ul li img {
                        width: 70px;
                        height: 50px;
                        border-radius: 5px;
                        object-fit: cover;
                    }
    </style>
</head>
<body>
    <br />
    <!-- Photo Carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/valilik2.jpg" class="d-block w-100" alt="Mersin Governorship Building">
            </div>
            <div class="carousel-item">
                <img src="~/Content/valilik3.jpg" class="d-block w-100" alt="Local Landmark">
            </div>
            <div class="carousel-item">
                <img src="~/Content/valilik.jpg" class="d-block w-100" alt="Scenic View of Mersin">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Information Section --><br />
    <div class="information-container">
        <div class="information-header"></div>
        <div class="information-content">
            <h2>Vision and Mission</h2>
            <p>Mersin Governorship's primary goal is to provide the highest quality public services, enhancing the well-being of our citizens and supporting the city's development.</p>
            <p>We aim to foster social and economic growth, improve citizen welfare, and promote societal harmony.</p>

            <h2>Our Duties</h2>
            <p>We are responsible for administration, security, healthcare, education, and social services. Collaborating with public institutions and local governments, we strive to address the needs of our province.</p>

            <h2>Our History</h2>
            <p>Our history, from the Ottoman era to the present day, reflects a significant journey in Mersin's development and modernization.</p>

        </div>
    </div>

    <br />

    <!-- News Section -->
    <!-- News Section -->
    <section class="news-container">
        <h3>Latest News</h3>
        <ul>
            @foreach (var newsItem in Model)
            {
                <li>
                    <img src="~/Content/valilik.jpg" alt="News Image">
                    <a href="#" class="news-link" data-content="@newsItem.Content">@newsItem.Content</a>
                </li>
            }
        </ul>
    </section>



    <!-- News Modal -->
    <div class="news-modal" id="newsModal">
        <span class="close-modal" id="closeModal">&times;</span>
        <h4>News Details</h4>
        <div id="newsContent"></div>
    </div>


    <!-- News Modal -->
    <div class="modal fade" id="newsModal" tabindex="-1" role="dialog" aria-labelledby="newsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newsModalLabel">News Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="newsContent"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap and jQuery Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Habere tıklandığında modalı göster
            $('.news-link').click(function (event) {
                event.preventDefault(); // Linkin normal davranışını engelle
                var content = $(this).data('content');
                $('#newsContent').html(content);
                $('body').append('<div class="modal-backdrop-blur"></div>'); // Bulanıklaştırılmış arka plan ekle
                $('#newsModal').fadeIn(); // Modalı fade in ile göster
            });

            // Modal kapama butonuna tıklandığında modalı kapat
            $('#closeModal').click(function () {
                $('#newsModal').fadeOut(); // Modalı fade out ile kapat
                $('.modal-backdrop-blur').remove(); // Bulanıklaştırılmış arka planı kaldır
            });

            // Modal dışına tıklandığında modalı kapat
            $(window).click(function (event) {
                if ($(event.target).is('#newsModal')) {
                    $('#newsModal').fadeOut(); // Modalı fade out ile kapat
                    $('.modal-backdrop-blur').remove(); // Bulanıklaştırılmış arka planı kaldır
                }
            });
        });

    </script>

</body>
</html>
