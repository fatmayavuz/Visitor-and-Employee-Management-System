

@model IEnumerable<bilgi.Models.Contact>

@{
    ViewBag.Title = "All Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Site.css">
    <style>
        .btn-danger {
            background-color: red;
            color: white;
        }

            .btn-danger:hover {
                background-color: darkred;
            }

        .btn-success {
            background-color: green;
            color: white;
        }

            .btn-success:hover {
                background-color: darkgreen;
            }

        .container {
            margin-top: 20px; /* Üstten boşluk */
        }

        body {
            background-color: #f8f9fa; /* Sayfa arka plan rengi (açık gri) */
        }

        

            .table tbody tr:hover {
                background-color: #e9ecef; /* Hover rengi */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>All Messages</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.Message</td>
                            <td>
                                <a href="@Url.Action("DeleteMessage", "Home", new { id = item.Id_f })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this message?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No messages found.</p>
        }
    </div>
</body>
</html>
