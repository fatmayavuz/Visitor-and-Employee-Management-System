

@using System.Web.Mvc;
@using System.Web.Helpers;
@model bilgi.Models.Employee

@{
    ViewBag.Title = "Login_Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Employee Login</title>
    <style>
        /* General styling */
        html, body {
            height: 100%;
            margin: 0;
            background-color: #f0f2f5;
            font-family: Arial, sans-serif;
        }

        /* Centering the login container */
        .container-fluid {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        /* Login container styles */
        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

            .login-container h3 {
                color: #333;
                text-align: center;
                margin-bottom: 30px;
                font-size: 24px;
                font-weight: bold;
            }

        /* Form input styles */
        .form-group label {
            font-size: 14px;
            color: #666;
        }

        .form-control {
            font-size: 16px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            margin-bottom: 20px;
        }

        /* Button styles */
        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            width: 100%;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #3751a6;
                border-color: #3751a6;
            }

        /* Link styles */
        .login-container a {
            display: block;
            text-align: center;
            color: #4e73df;
            margin-top: 20px;
            text-decoration: none;
            font-size: 14px;
        }

            .login-container a:hover {
                text-decoration: underline;
            }

        /* Error message styling */
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="login-container">
            <h3>Employee Login</h3>
            @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            @using (Html.BeginForm("Login_Employee", "Home", FormMethod.Post))
            {

                <div class="form-group">
                    <label for="email">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email", @placeholder = "Enter your email" })
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password", @placeholder = "Enter your password" })
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            }

        </div>
    </div>
</body>
</html>

