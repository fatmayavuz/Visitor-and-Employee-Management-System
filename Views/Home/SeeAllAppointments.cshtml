


@model List<bilgi.Models.Visitor_Appointment>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Appointments</title>
    <link rel="stylesheet" href="~/Content/Site.css">
    <style>
        .btn-danger {
            background-color: red;
            color: white;
        }

            .btn-danger:hover {
                background-color: darkred;
            }

        .btn-success {
            background-color: green;
            color: white;
        }

            .btn-success:hover {
                background-color: darkgreen;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>All Appointments</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Department</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.Service</td>
                        <td>@appointment.Department</td>
                        <td>@(appointment.Date.HasValue ? appointment.Date.Value.ToString("dd.MM.yyyy") : "No Date")</td>
                        <td>@appointment.Type</td>
                        <td>@appointment.Email</td>
                        <td>
                            <a href="@Url.Action("DeleteAppointment", "Home", new { id = appointment.Id_v_a })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this appointment?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
